/tpass 0 def
/tfail 0 def

/shouldBe {     % <msg> <this> <that> shouldBe -
    3 dict begin
        /str {
            20 string cvs
        } bind def

        1 index 1 index
        str /that exch def
        str /this exch def

        eq
        {
            (Pass: )
            tpass 1 add /tpass exch store
        } {
            (Fail: )
            tfail 1 add /tfail exch store
        } ifelse print

        print
        [ ( [) this ( ) that (]) ] { print } forall
        (\n) print
    end
} bind def
