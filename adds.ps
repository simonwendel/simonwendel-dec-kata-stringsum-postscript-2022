/adds {             % <string> adds <integer>
    2 dict begin
    /sum 0 def
    /val exch def

    /addToSum {
        cvi
        sum add /sum exch def
    } bind def

    val length 0 gt {
        val (,)
        {
            search {
                addToSum
            } {
                addToSum
                exit
            } ifelse
        } loop
    } if

    sum
    end
} bind def
